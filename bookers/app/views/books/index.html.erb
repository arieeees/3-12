<h1>Books</h1>
<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  <span>
      <%= link_to book.title, "/books/#{book.id}" %>
  </span>
  
  <p>Body</p>
  <span><%= book.body %></span>

<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
  
<% end %>
